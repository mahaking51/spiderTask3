	<script type="text/javascript">
	function notification(){
		$('#notification1').fadeIn();
		setTimeout(function(){
			$('#notification1').fadeOut(1000);
		},3750)
		}
    userName=document.getElementById('name').innerHTML;
    $(document).ready(()=>{
		url=window.location.href;
		if(localStorage.getItem('usernameShop')==null || localStorage.getItem('usernameShop')==''){
			localStorage.setItem('usernameShop',userName)
		}
		if(!url.includes(localStorage.getItem('usernameShop'))){
			window.location.href="http://localhost:3000/dashboard/"+localStorage.getItem('usernameShop')
		}
		

		nowDate=new Date();
					day1=1000*60*60*24;

		socket.emit('recentPurchases',userName);
					socket.on('returnPurchase',function(dat){
						console.log(dat);
						cond=document.getElementById('recentPurchase').innerHTML
						console.log(cond);
						for(var i=0;i<dat.length;i++){
							purchaseDate= new Date(dat[i].date)
							dateString= purchaseDate.toDateString();
							if((( nowDate.getTime() - purchaseDate.getTime())/day1)<=7 && (( nowDate.getTime() - purchaseDate.getTime())/day1)>=0){
								document.getElementById('recentPurchase').innerHTML+='<li class="list-group-item"><h4 class="">'+dat[i].name+'</h4>  quantity- '+dat[i].quantity+'<br> Seller :'+dat[i].seller+' <h4 class="float-right">Rs.'+dat[i].cost+'</h4><small  style="display:block"> on '+dateString+'</small></li>'
							}
						}
					})	
				
    $.ajax({
        url:'/users/'+userName,
        type:'GET',
        dataType:'json',
        success:(data)=>{
            console.log(data);
            if(data.type==='buyer'){
				document.getElementById('seller').style.display='none'
				document.getElementById('dashboardSellSec').style.display='none';
				document.getElementById('buyCart').style.display='block';
				document.getElementById('sellerProfile').style.display='none';
				document.getElementById('sellerStats').style.display='none';
				socket.emit('cartUpdate',userName);
				socket.on('itemUpdate',function(data){
					document.getElementById('buyer').innerHTML+='<span class="badge badge-light" id="cartItems" style="margin-top:3px;padding:5px;margin-left:6px;">'+data+'</span>'
				})
				$(".trigger_popup_fricc").click(function(){
				$('.hover_bkgr_fricc').show();
				socket.emit('qrData',userName);
							socket.on('qrcode',function(dat){
								info={
								username:data.username,
								email:data.email,
								address:data.address,
								purchases:dat
							}
							info=JSON.stringify(info)
							document.getElementById('qrcode').src='https://api.qrserver.com/v1/create-qr-code/?data='+info+'&amp;size=80x80'
							console.log(info);
							})

				});
				$('.hover_bkgr_fricc').click(function(){
					$('.hover_bkgr_fricc').hide();
				});
				$('.popupCloseButton').click(function(){
					$('.hover_bkgr_fricc').hide();
				});
				
				
            }
            else{
                document.getElementById('buyer').style.display='none'
                document.getElementById('sellSec').style.display='block'
				document.getElementById('dashboardBuySec').style.display='none'
				document.getElementById('buyerProfile').style.display='none';
				document.getElementById('buyerStats').style.display='none';
				document.getElementById('buyerSearch').style.display='none';
            }
        }
    })
});
		$(document).ready(function(){
			$(".sidebar-btn").click(function(){
				$(".wrap").toggleClass("coll");
			});
		});
		document.getElementById('about').addEventListener('click',function(){
			localStorage.setItem('usernameShop','')
			window.location.href='/';
		})
		document.getElementById('dashboard').addEventListener('click',function(){
			window.location.reload();
			document.getElementById('dashboardSec').style.display='block';
			document.getElementById('aboutSec').style.display='none';
			document.getElementById('msgSec').style.display='none';
			document.getElementById('settingsSec').style.display='none';
			document.getElementById('profileDisplay').style.display='none';

		})
		document.getElementById('messages').addEventListener('click',function(){	
			document.getElementById('msgSec').style.display='block';
			document.getElementById('aboutSec').style.display='none';
			document.getElementById('settingsSec').style.display='none';
			document.getElementById('dashboardSec').style.display='none';
			document.getElementById('success').style.display='none';
			document.getElementById('profileDisplay').style.display='none';
		})
		document.getElementById('profile').addEventListener('click',function(){
			document.getElementById('profileDisplay').style.display='block';
			document.getElementById('msgSec').style.display='none';
			document.getElementById('aboutSec').style.display='none';
			document.getElementById('settingsSec').style.display='none';
			document.getElementById('dashboardSec').style.display='none';
			document.getElementById('success').style.display='none';
			document.getElementById('nameProfile').innerHTML=userName;
			document.getElementById('sellerName').innerHTML=userName;
			$.ajax({
				url:'/users/'+userName,
				type:'GET',
				dataType:'json',
				success:(data)=>{
					document.getElementById('emailProfile').innerHTML=data.email;
					document.getElementById('buyerAddress').innerHTML=data.address;
					document.getElementById('sellerEmail').innerHTML=data.email;
					document.getElementById('sellerAddress').innerHTML=data.address;
				}
			})
		})
		document.getElementById('settings').addEventListener('click',function(){
			document.getElementById('settingsSec').style.display='block';
			document.getElementById('aboutSec').style.display='none';
			document.getElementById('msgSec').style.display='none';
			document.getElementById('dashboardSec').style.display='none';
			document.getElementById('success').style.display='none';
			document.getElementById('profileDisplay').style.display='none';

		})
		document.getElementById('about').addEventListener('click',function(){
			document.getElementById('aboutSec').style.display='block';
			document.getElementById('msgSec').style.display='none';
			document.getElementById('settingsSec').style.display='none';
			document.getElementById('dashboardSec').style.display='none';
			document.getElementById('success').style.display='none';
			document.getElementById('profileDisplay').style.display='none';

		})
		</script>
